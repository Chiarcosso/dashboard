-# %p#notice= notice
%h3 Mezzi

= form_tag(vehicles_path, method: :get, remote: true, type: :script) do |f|
  = text_field_tag :search, @search, placeholder: 'Cerca..', class: 'form-control autosearch', 'data-target': vehicles_path
= will_paginate @vehicles
.container
  .row
    .col-sm-1
      %b='Targa'
    .col-sm-2
      %b='Telaio'
    .col-sm-2
      %b='Tipo'
    .col-sm-2
      %b='Propriet√†'
    .col-sm-1
      %b='Circola'
    .col-sm-2
      %b='Note'
    .col-sm-1
    .col-sm-1


.container.scrollable-panel
  - @vehicles.each do |v|
    .row
      .col-sm-1
        =v.plate
      .col-sm-2
        =v.chassis_number
      .col-sm-2
        =v.model.complete_name
      .col-sm-2
        =v.property.name
      .col-sm-1
        =v.dismissed ? 'No' : 'Si'
      .col-sm-2
        =v.notes
      .col-sm-1
        =button_to 'Modifica', edit_vehicle_path(v.id), class: 'inline', method: :get
      .col-sm-1
        =button_to 'x', vehicle_path(v.id), remote: true, method: :delete, class: 'inline'

.container
  =button_to 'Crea', new_vehicle_path, method: :get
