-# %div{style: 'width: 90vh; padding: 0px'}
.small-title="#{@vehicle.model.complete_name} - #{@vehicle.plate}"
%b= "#{@vehicle.vehicle_type.name}#{@vehicle.vehicle_category == VehicleCategory.not_available ? '' : " ("+@vehicle.vehicle_category.name+")"} (cat. #{@vehicle.vehicle_category.name}), #{@vehicle.vehicle_typology.name}"
%br
%br
.row.no-margins
  .col-sm-12
    %div
      %b="Attrezzature: "
      =@vehicle.vehicle_equipments.pluck(:name).join(', ')
.row.no-margins
  .col-sm-12
    %b="Dettagli: "
    .scrollable-panel
      - @vehicle.last_vehicle_informations.each do |i|
        .floating-block
          - history = i.history
          .infobox-block{data: {expand: (history.size > 0).to_json}}
            %b= "#{i.vehicle_information_type.name}: "

            = i.information_label
            - if history.size > 0
              %span{style: 'color: #44f'}
                (Storico)
              - history.each do |h|
                %br
                = h.information_label
                = "dal: #{I18n.l h.date}, al: #{I18n.l h.date_to}"
