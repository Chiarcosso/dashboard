= form_for @vehicle do |f|
  - if @vehicle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vehicle.errors.count, "error")} prohibited this vehicle from being saved:"
      %ul
        - @vehicle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :references
    = f.text_field :references
  .field
    = f.label :dismissed
    = f.check_box :dismissed
  .field
    = f.label :registration_date
    = f.date_select :registration_date
  .field
    = f.label :initial_serial
    = f.text_field :initial_serial
  .field
    = f.label :mileage
    = f.number_field :mileage
  .actions
    = f.submit 'Save'
