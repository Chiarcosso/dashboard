.container-fluid
  = form_tag(items_path, method: :get, remote: true, type: :script) do |f|
    = text_field_tag :search, @search, placeholder: 'Cerca..', class: 'form-control autosearch', 'data-target': items_path
.container-fluid
  .row.item-block.tab-header
    .col-sm-1
      Elimina
    .col-sm-3
      Articolo
    .col-sm-3
      Seriale
    .col-sm-1
      Stato
    .col-sm-2
      Scadenza
    .col-sm-2
      Posizione

.container-fluid.scrollable-panel
  - @selected_items.all.each do |item|
    .row
      .col-sm-1
        = button_to "x", "/items/#{item.id}", :method => :delete, :remote => true
        = item.id
      .col-sm-3
        = item.article.complete_name.to_s
      .col-sm-3
        = item.serial
      .col-sm-1
        = item.state
      .col-sm-2
        = item.expiringDate.nil?? '' : (l item.expiringDate)
      .col-sm-2
        = item.actual_position

