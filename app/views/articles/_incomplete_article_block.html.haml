.container-fluid
  .row-fluid
    .col-sm-1
      = button_to "x", "/articles/#{article.id}", :method => :delete, :remote => true
    .col-sm-2
      = link_to article.manufacturer_name, edit_company_path(article.id), :remote => true, class: 'ajax-link'
    .col-sm-3
      = link_to article.name, edit_article_path(article.id), :remote => true
    .col-sm-2
      = link_to article.barcode.to_s, edit_article_path(article.id), :remote => true
    .col-sm-1
      = link_to article.minimalReserve.to_s, edit_article_path(article.id), :remote => true
    .col-sm-3
      = link_to article.categoriesList, edit_article_path(article.id), :remote => true
