.row{ :class => (article.under_reserve? ? 'signal-danger' : 'colored'), 'data-name' => article.complete_name }

  .col-sm-1
    = button_to "x", "/articles/#{article.id}/#{Base64.encode64(@search)}", :method => :delete, :remote => true
  .col-sm-3
    = link_to article.id.to_s+' :: '+article.complete_name, p_edit_article_path(article.id,Base64.encode64(@search)), :remote => true
  .col-sm-2
    =  article.barcode.to_s#, p_edit_article_path(article.id,Base64.encode64(@search)), :remote => true
  .col-sm-2
    =  article.availability.size.to_s+" (min. #{article.minimalReserve.to_i})"#, p_edit_article_path(article.id,Base64.encode64(@search)), :remote => true
  .col-sm-2
    =  article.lastPrice#, p_edit_article_path(article.id,Base64.encode64(@search)), :remote => true
  .col-sm-1
    =  article.categoriesList#, p_edit_article_path(article.id,Base64.encode64(@search)), :remote => true
