.scrollable-panel.full-panel
  .container
    = "Record: #{@results.count}"
    = button_to 'Ricarica', mdc_transport_documents_path, method: :get
    - @results.each do |r|
      - r.each do |res|
        .row
          .col-sm-12
            %hr
            %b IDPosizione:
            = res.id
            %b Autista:
            = res.person.complete_name
            %br
            = res.definition
            -# = res.inspect
            - keys  = ''
            - res.dataCollectionRows.each do |dcr|
              - keys += "<ns3:keys>#{dcr.dataCollectionRowKey.xml}</ns3:keys>"
            = form_tag(close_fare_path, method: :post) do |f|
              = hidden_field_tag :data_collection_rows, Base64.encode64(keys)
              = submit_tag 'Chiudi'
        .row
          .col-sm-12
            - res.photos.each do |p|
              = image_tag(p, size: '320x240', class: 'gallery-image')
            %br
            %br
