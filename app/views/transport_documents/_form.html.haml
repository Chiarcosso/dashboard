= form_for @transport_document do |f|
  - if @transport_document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transport_document.errors.count, "error")} prohibited this transport_document from being saved:"
      %ul
        - @transport_document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :reason
    = f.text_field :reason
  .actions
    = f.submit 'Save'
