    .col-sm-2
      %b
        Pista
    .col-sm-2
      %b
        Inizio
    .col-sm-2
      %b
        Fine
  - CarwashUsage.lastmonth.order(:ending_time => :desc).each do |c|
    .row
      .col-sm-2
        = c.person.complete_name
      .col-sm-2
        = c.vehicle_1.plate unless c.vehicle_1.nil?
      .col-sm-2
        = c.vehicle_2.plate unless c.vehicle_2.nil?
      .col-sm-1
        = c.carwash_special_code.label unless c.carwash_special_code.nil?
      .col-sm-2
        = c.row
      .col-sm-2
        = l(c.starting_time)
      .col-sm-2
        = l(c.ending_time)
