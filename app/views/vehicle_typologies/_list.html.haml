%br
-VehicleTypology.all.order(:name).each do |v|
  - unless v.name == 'N/D'
    .row.colored
      .col-sm-8#name
        =v.name
      .col-sm-4#buttons
        .inline
          =button_tag 'Modifica', class: 'popup-link', data: { title: 'Modifica tipologia veicolo', name: 'edit_vehicle_typology', target: edit_vehicle_typology_path(v.id) }
        .inline
          =button_to 'x', vehicle_typology_path(v.id, format: :js), remote: true, method: :delete, data: {:confirm => "Eliminare la tipologia #{v.name}?"}

