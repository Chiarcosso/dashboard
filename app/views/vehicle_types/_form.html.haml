= form_for @vehicle_type do |f|
  - if @vehicle_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vehicle_type.errors.count, "error")} prohibited this vehicle_model from being saved:"
      %ul
        - @vehicle_type.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-sm-5
      .field
        = f.label 'Tipo'
        = f.text_field :name, class: 'form-control'
    .col-sm-4
      .field
        = f.label 'Codice lavaggio'
        = f.number_field :carwash_type, class: 'form-control', max: 13, min: 1
    .col-sm-1
      .actions
        = f.label ' '
        = f.submit 'Salva'
